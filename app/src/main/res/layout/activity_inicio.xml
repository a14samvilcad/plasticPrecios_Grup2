<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.PlasticPrecios_Grup2.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/fondo"
            app:popupTheme="@style/Theme.PlasticPrecios_Grup2.PopupOverlay">

            <ImageView
                android:id="@+id/fotoUser"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:background="@drawable/avatar"

                />

            <ImageView
                android:id="@+id/lupa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"

                android:background="@drawable/lupa" />

            <ImageView
                android:id="@+id/cestaImage"
                android:layout_height="35dp"
                android:layout_width="40dp"
                android:layout_marginLeft="30dp"
                android:onClick="cestaClick"

                android:background="@drawable/bolso"
                />





        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_inicio" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>