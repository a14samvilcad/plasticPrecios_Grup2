<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"

            android:background="@drawable/logobcn"
            />

        <EditText
            android:id="@+id/textUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopUser"
            android:hint="Usuario"
            android:ems="10"
            android:inputType="textLongMessage"

            />

        <EditText
            android:id="@+id/textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="ContraseÃ±a"

            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TableRow>
                <Button
                    android:id="@+id/login"
                    android:layout_width="@dimen/width_button"
                    android:text="@string/enviarButton"

                    />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="@dimen/width_button"
                    android:layout_marginLeft="@dimen/marginBetweenButtons"
                    android:text="@string/newUserButton"
                    />
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="126dp"
            android:layout_height="115dp"
            android:background="@drawable/reciclar"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"

            />




    </LinearLayout>



</RelativeLayout>